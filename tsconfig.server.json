{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "outDir": "./dist/server",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@server/*": ["server/*"]
    }
  },
  "include": ["src/server/**/*", "src/server.ts", "src/types/**/*"],
  "exclude": ["node_modules", "dist"]
}
